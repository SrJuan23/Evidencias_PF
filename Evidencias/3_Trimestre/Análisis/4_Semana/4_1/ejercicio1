public class Instagram {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        
        int [] seguidores = new int [7]; 
        String [] dias = {"Lunes","Martes","Miercoles","Jueves","Viernes","Sabado","Domingo"}; 
        int total=0;
    
        for(int i=0;i<7;i++){
            seguidores[i]=Integer.parseInt(JOptionPane.showInputDialog("Â¿Cuantos seguidores ganaste el dia "+dias[i]+"?"));
            total+=seguidores[i];
        }
        
        JOptionPane.showMessageDialog(null,"Esta semana ganaste "+total+" seguidores");
        // TODO code application logic here
    }
    
    
}
